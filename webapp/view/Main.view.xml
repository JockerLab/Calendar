<mvc:View
    controllerName="itmo2021calendarsvv.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page 
                    id="page" 
                    title="{i18n>title}">
                    <ScrollContainer
                        focusable="true">
                        <content>
                            <Button
                                class="sapUiSmallMargin"
                                text="Добавить отпуск"
                                press=".onAddVacation"/>
                            <Button
                                class="sapUiSmallMargin"
                                text="Отменить отпуск"
                                press=".onCancelVacation"/>
                            <mvc:XMLView viewName="itmo2021calendarsvv.view.VacationTable"/>
                            <mvc:XMLView viewName="itmo2021calendarsvv.view.Calendar"/>
                        </content>
                    </ScrollContainer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
